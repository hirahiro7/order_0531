
sp()
  @media screen and (max-width: 767px)
    {block}

lg()
  @media screen and (min-width: 768px)
    {block}

col-red = #FF1616;
// vw(size)
//   "calc( %s * (100vw / 750))" % size

vw(size)
  "min(calc(%s * (100vw / 375))" % size ", %spx)" % size 

vvw(size)
  return round(100 * (size/750),2)vw

closeclip(size=1)
  clip-path: polygon((size)px 0, 0 (size)px, "calc(50% - %spx)" % size 50%, 0% "calc(100% - %spx)" % size, (size)px 100%, 50% "calc(50% + %spx)" % size, "calc(100% - %spx)" % size 100%, 100% "calc(100% - %spx)" % size, "calc(50% + %spx)" % size 50%, 100% (size)px, "calc(100% - %spx)" % size 0, 50% "calc(50% - %spx)" % size);

arr(dir,size=2)
  if dir == 'prev'
    clip-path: polygon(100% (size)px, (size*2)px 50%, 100% "calc(100% - %spx)" % size, "calc(100% - %spx)" % size 100%, 0 50%, "calc(100% - %spx)" % size 0);
  else
    clip-path: polygon((size)px 0, 100% 50%, (size)px 100%, 0 "calc(100% - %spx)" % size, "calc(100% - %spx)" % (size*2) 50%, 0 (size)px);

font-noto()
  font-family: 'Noto Sans JP', sans-serif;

font-min()
  font-family: 'Noto Serif JP', serif;

font-roboto()
  font-family: 'Roboto', sans-serif;

input
	margin: 0;
	padding: 0;
	background: none;
	border: none;
	border-radius: 0;
	outline: none;
	// -webkit-appearance: none;
	// -moz-appearance: none;
	// appearance: none;
button
  background-color: transparent;
  border: none;
  cursor: pointer;
  outline: none;
  padding: 0;
  appearance: none;
  font-noto();

select
  appearance: none;
  border-radius: 0;
  border: 0;
  margin: 0;
  padding: 0;
  background: none transparent;
  border: none;
  vertical-align: middle;
  font-size: inherit;
  color: inherit;
  box-sizing: content-box;
  outline: none

.l-order
  display: flex;
  flex-direction: column;
  align-items: center;
  position relative;
  min-width: 320px;
  width: 100%;
  overflow: hidden;
  font-noto();
  font-feature-settings: "palt";
  gap: vw(40);
  padding: vw(40) vw(20) vw(64);
  box-sizing: border-box;

  &__ttl
    max-width: 1000px;
    width: 100%;
  
  &__about
    max-width: 1000px;
    width: 100%;

  &__form
    max-width: 1000px;
    width: 100%;
  
  &__footer
    font-size: vw(11);
    width: 100vw;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: vw(32);
    color: #fff;
    background: #000;

.l-cart
  &__btn
    bottom: vw(10);
    right: vw(10);

.l-search
  &__btn
    bottom: vw(80);
    right: vw(10);
  
  &__cnt
    position: fixed
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.7);
    z-index 120;

.p-ttl
  display: flex;
  align-items: center;
  width: 100%;

  &__logo
    width: vw(180);

    svg
      display: block;
      width: 100%;
      height: auto;
  
  &__ttl
    font-size: vw(24);
    line-height: 1.0;
    margin-left: .5em;

.p-about
  position: relative;

  p
    font-size: vw(16);
    letter-spacing: .05em;
    line-height: 1.6;

    &.is-em
      font-weight: bold;

    & + p
      margin-top: 1em;

.p-itemarea
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: vw(20);

  &__category
    position: relative;
    width: 100%;
    overflow: auto;

  &__detail
    position: relative;
    width: 100%;

.p-category
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: vw(10);

  &:is(.is-fixed *)
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: #fff;
    // padding: vw(20) 0 vw(20) vw(20);
    padding: vw(20);
    box-sizing: border-box;
    display: flex;
    overflow: auto;
    transition: .2s;
    +lg()
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      padding: vw(20);
      justify-content: center;

.p-form
  position: relative;
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  gap: vw(30) 10px;

  &__submit
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    width: 100%;
    height: vw(64);
    display: flex;
    justify-content: center;
    align-items: center;
    background: #8c3e44;
    color: #fff;
    font-size: vw(16);
    line-height: 1.0;
    letter-spacing: .075em;
    z-index 100;

  > *
    width: calc(50% - 5px);

    &.is-max
      width: 100%;
    
    &.p-itemarea
      margin-top: vw(20);

.c-input
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: vw(10);

  &__label
    position: relative;
    font-size: vw(14);
    font-weight: bold;
    line-height: 1.0;

    &.is-other
      font-size: vw(10);
      font-weight: normal;

    &:is(.is-required *)
      &::after
        content: "*";
        font-size: vw(16)
        // margin-left: .25em;
        color: col-red;
        position: absolute;
        top: 0;
        left: calc(100% + 3px);
  
  &__txt
    width: 100%;
    background: #fff;

.c-textform
  border: 1px solid #bbb;
  border-radius: 2px;
  width: 100%;
  height: vw(32);
  padding: .5em;
  box-sizing: border-box;
  font-size: vw(16)

.c-checkform
  display: block;

.c-category
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: vw(40);
  font-size: vw(16);
  line-height: 1.0;
  border-bottom: 1px solid #000;
  transition: .2s;
  +lg()
    &:hover
      cursor pointer;

  &.is-active
    border-color: col-red;
    color: col-red;
  
  &:is(.is-fixed *)
    min-width: 90px;

.p-item
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
  gap: vw(30) vw(10);
  animation: itmWrapFadeOut 1.0s forwards;

  &.is-active
    position: relative;
    display: grid !important;
    animation: itmWrapFadeIn 1.0s forwards;
    z-index 10;

.c-item
  display: grid;
  grid-template-rows: subgrid;
  grid-row: span 5;
  align-items: flex-start;
  gap: vw(10);
  border-radius: 6px;
  animation: itmFadeIn .6s;

  

  &__img
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #ddd;

    &::after
      position absolute;
      top: 50%;
      left: 50%;
      content: "No image";
      color: #fff;
      transform: translate(-50%,-50%);
      display: block;
      line-height: 1.0;
      font-weight: bold;
      font-size: vw(18);
      font-style: italic;

    &::before
      content: "";
      display: block;
      position: relative;
      padding-bottom: 100%;

    img
      position: absolute;
      display: block;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index 10;

  &__num
    font-size: vw(12);
    line-height: 1.0;

  &__name
    font-size: vw(14);
    line-height: 1.0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;

  &__price
    font-size: vw(14);
    line-height: 1.0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;

  &__check
    position: relative;
    margin-top: vw(8);
    width: 100%;

  &__other
    position: relative;
    margin-top: vw(10);

.c-fixedBtn
  position: fixed;
  width: vw(60);
  height: vw(60);
  z-index 100;
  background: #fff;
  border: solid 1px #333;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

  &__badge
    background: col-red;
    color: #fff;
    position: absolute;
    top: vw(0);
    right: vw(0);
    width: vw(20);
    height: vw(20);
    font-size: vw(12);
    line-height: 1.0;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

  &__ico
    width: 50%

    &:is(.l-search *)
      width: 40%;

    svg
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;


.c-checkTbl
  width: 100%;
  font-size: vw(12);

  th,td
    text-align: center;
    padding: vw(4) vw(2);
    box-sizing: border-box;
    border: 1px solid #ddd;
    vertical-align: middle;

    .c-checkform
      margin: 0 auto;


@keyframes itmWrapFadeIn
  from
    opacity: 0;
  to
    opacity: 1;

@keyframes itmWrapFadeOut
  from
    opacity: 1;
  to
    opacity: 0;

@keyframes itmFadeIn
  from
    opacity: 0;
    transform: translateY(10px)
  to
    opacity: 1;
    transform: translateY(0)
