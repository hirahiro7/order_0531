  width: vw(60);
  height: vw(60);
  z-index 100;
  background: #fff;
  border: solid 1px #333;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

  &.is-disable
    background: rgba(0,0,0,.5);

    &:hover
      cursor: initial;

  &:hover
    cursor pointer;

  &__badge
    background: col-red;
    color: #fff;
    position: absolute;
    top: vw(0);
    right: vw(0);
    width: vw(20);
    height: vw(20);
    font-size: vw(12);
    line-height: 1.0;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: badgeCount .6s;
    display: none;

    &:is(.is-disable *)
      display: none;

  &__ico
    width: 50%

    &:is(.l-search *)
      width: 40%;

    svg
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;

.c-checkTbl
  width: 100%;
  font-size: vw(12);

  th,td
    text-align: center;
    padding: vw(4) vw(2);
    box-sizing: border-box;
    border: 1px solid #ddd;
    vertical-align: middle;

    .c-checkform
      margin: 0 auto;


.m-noScroll
  position: absolute;
  top: 0;
