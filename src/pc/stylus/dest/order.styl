// vw(size)
//   "calc( %s * (100vw / 750))" % size

vw(size)
  "min(calc(%s * (100vw / 375))" % size ", %spx)" % size 

vvw(size)
  return round(100 * (size/750),2)vw

closeclip(size=1)
  clip-path: polygon((size)px 0, 0 (size)px, "calc(50% - %spx)" % size 50%, 0% "calc(100% - %spx)" % size, (size)px 100%, 50% "calc(50% + %spx)" % size, "calc(100% - %spx)" % size 100%, 100% "calc(100% - %spx)" % size, "calc(50% + %spx)" % size 50%, 100% (size)px, "calc(100% - %spx)" % size 0, 50% "calc(50% - %spx)" % size);

arr(dir,size=2)
  if dir == 'prev'
    clip-path: polygon(100% (size)px, (size*2)px 50%, 100% "calc(100% - %spx)" % size, "calc(100% - %spx)" % size 100%, 0 50%, "calc(100% - %spx)" % size 0);
  else
    clip-path: polygon((size)px 0, 100% 50%, (size)px 100%, 0 "calc(100% - %spx)" % size, "calc(100% - %spx)" % (size*2) 50%, 0 (size)px);

