    z-index 10;

.c-item
  display: grid;
  grid-template-rows: subgrid;
  grid-row: span 6;
  align-items: flex-start;
  gap: vw(10);
  border-radius: 6px;
  animation: itmFadeIn .6s;

  

  &__img
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #ddd;

    &::after
      position absolute;
      top: 50%;
      left: 50%;
      content: "No image";
      color: #fff;
      transform: translate(-50%,-50%);
      display: block;
      line-height: 1.0;
      font-weight: bold;
      font-size: vw(18);
      font-style: italic;

    &::before
      content: "";
      display: block;
      position: relative;
      padding-bottom: 100%;

    img
      position: absolute;
      display: block;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index 10;

